{
  "name": "weather-app",
  "version": "1.0.0",
  "description": "Weather forecast app using the Open Weather API",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --open",
    "build": "webpack --mode=production",
    "lint": "eslint --fix src",
    "format": "prettier --write \"./src/**/*.{js,html,scss}\""
  },
  "author": "Mauricio Robayo <rfmajo@gmail.com> (www.mauriciorobayo.com)",
  "license": "MIT",
  "devDependencies": {
    "css-loader": "^3.4.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "node-sass": "^4.13.0",
    "prettier": "^1.18.2",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.2",
    "webpack": "^4.41.3",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "linkify-it": "^2.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MauricioRobayo/weather-app.git"
  },
  "bugs": {
    "url": "https://mauriciorobayo.github.io/weather-app"
  },
  "homepage": "https://mauriciorobayo/github.io/weather-app",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,html,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
